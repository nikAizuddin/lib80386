;|   | +   76 | R                                                  |   |
;|   +--------+----------------------------------------------------+   |
;|   | Total stack used for local variables = 80 bytes             |   |
;|   +-------------------------------------------------------------+   |
;|                                                                     |
;|   FUNCTION formula_hex2dec(hexadecimal_num:LONGWORD) : LONGWORD     |
;|                                                                     |
;|   VAR                                                               |
;|       decimal_num:LONGWORD                                          |
;|       A:LONGWORD                                                    |
;|       B:LONGWORD                                                    |
;|       C:LONGWORD                                                    |
;|       D:LONGWORD                                                    |
;|       E:LONGWORD                                                    |
;|       F:LONGWORD                                                    |
;|       G:LONGWORD                                                    |
;|       H:LONGWORD                                                    |
;|       I:LONGWORD                                                    |
;|       J:LONGWORD                                                    |
;|       K:LONGWORD                                                    |
;|       L:LONGWORD                                                    |
;|       M:LONGWORD                                                    |
;|       N:LONGWORD                                                    |
;|       O:LONGWORD                                                    |
;|       P:LONGWORD                                                    |
;|       Q:LONGWORD                                                    |
;|       R:LONGWORD                                                    |
;|                                                                     |
;|   BEGIN                                                             |
;|                                                                     |
;|       A := (hexadecimal_num / 1000000000);                          |
;|       B := 16 * A;                                                  |
;|       C := (hexadecimal_num / 100000000) + B;                       |
;|       D := 16 * C;                                                  |
;|       E := (hexadecimal_num / 10000000) + D;                        |
;|       F := 16 * E;                                                  |
;|       G := (hexadecimal_num / 1000000) + F;                         |
;|       H := 16 * G;                                                  |
;|       I := (hexadecimal_num / 100000) + H;                          |
;|       J := 16 * I;                                                  |
;|       K := (hexadecimal_num / 10000) + J;                           |
;|       L := 16 * K;                                                  |
;|       M := (hexadecimal_num / 1000) + L;                            |
;|       N := 16 * M;                                                  |
;|       O := (hexadecimal_num / 100) + N;                             |
;|       P := 16 * O;                                                  |
;|       Q := (hexadecimal_num / 10) + P;                              |
;|       R := 6 * Q;                                                   |
;|       decimal_num := hexadecimal_num + R;                           |
;|                                                                     |
;|       EXIT(decimal_num);                                            |
;|                                                                     |
;|   END.                                                              |
;|                                                                     |
