function[] = euclidean_norm()


    //////////////////////////////////////////////////////////////////
    // Let X = row vector
    //////////////////////////////////////////////////////////////////

    X = [54.2314 -23.1234 90.8656];


    //////////////////////////////////////////////////////////////////
    // X = |X|
    //////////////////////////////////////////////////////////////////

    X = abs(X);


    //////////////////////////////////////////////////////////////////
    // Find sum of sqrt(X^2)
    //////////////////////////////////////////////////////////////////

    Y = 0;
    for i=1:1:size(X,'c')
        Y = Y + (X(i)^2);
    end
    Y = sqrt(Y);


    //////////////////////////////////////////////////////////////////
    // Show results
    //////////////////////////////////////////////////////////////////

    disp("Y = "+string(Y));


endfunction